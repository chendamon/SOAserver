<!DOCTYPE html>
<html>
  <head>
    <title>应用列表</title>
    <link rel="icon" type="image/x-icon" href="/images/infinity.ico">
    <link rel="stylesheet" href="/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="/stylesheets/style.css">
  </head>
  <body class="white">
    <!--标题栏-->
    <nav class="navbar navbar-expand-lg navbar-dark bg-myprimary">
      <div class="col-sm-offset-3 col-md-offset-3 col-sm-6 col-md-6 max-height">
        <a class="navbar-brand left" href="#">
          <img class="navicon" src="/images/infinity.png"/>
        </a>
        <p class="nav-line">应用列表</p>
        <div class="inline max-height right">
          <p class="nav-line nav-username" id="username"><%= username %></p>
          <form class="max-height nav-form" action="/logout" method="post">
            <button class="btn btn-success my-btn" type="submit">
              登出
            </button>
          </form>
        </div>
      </div>
    </nav>
    <!--app列表-->
    <% clients.forEach(function(client){ %>
    <div class="app col-sm-offset-3 col-md-offset-3 col-sm-6 col-md-6">
      <!--卡片的标题栏-->
      <nav class="navbar navbar-expand-lg navbar-dark bg-myprimary">
        <div class="col-sm-12 col-md-12 max-height">
          <a class="navbar-brand left" href="#">
            <img class="navicon" src="/images/<%= client.name %>.png"/>
          </a>
          <p class="nav-line"><%= client.name %></p>
          <div class="inline max-height right">
              <button class="btn btn-success my-btn" onclick="location=' <%= client.clientUrl %> '">打开</button>
          </div>
      </nav>
      <div class="description" style="padding:3px;min-height:100px;">
        <h4 style="line-height: 150%;"><%= client.clientDes %></h4>
      </div>
    </div>
    <% }) %>
  </body>
</html>
